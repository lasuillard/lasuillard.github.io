{
	"name": "lasuillard.github.io",
	"description": "My personal blog.",
	"readme": "./README.md",
	"author": {
		"name": "Yuchan Lee",
		"email": "lasuillard@gmail.com"
	},
	"type": "module",
	"private": true,
	"packageManager": "yarn@4.5.0",
	"scripts": {
		"postinstall": "svelte-kit sync",
		"dev": "vite dev --host",
		"build": "vite build",
		"preview": "wrangler dev",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest --coverage --run",
		"test:watch": "vitest --coverage --watch --ui --silent",
		"e2e": "playwright test",
		"e2e:watch": "playwright test --ui",
		"cf-typegen": "wrangler types src/worker-configuration.d.ts && prettier --write src/worker-configuration.d.ts"
	},
	"dependencies": {
		"@sentry/sveltekit": "^9.15.0",
		"@sveltejs/kit": "^2.21.1",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@tailwindcss/postcss": "^4.1.1",
		"@tailwindcss/typography": "^0.5.12",
		"@tailwindcss/vite": "^4.1.1",
		"daisyui": "^5.0.12",
		"date-fns": "^4.1.0",
		"glob": "^11.0.0",
		"highlight.js": "^11.11.1",
		"mermaid": "^11.6.0",
		"minisearch": "^7.1.0",
		"postcss": "^8.5.3",
		"qrcode": "^1.5.3",
		"rehype-autolink-headings": "^7.1.0",
		"rehype-highlight": "^7.0.0",
		"rehype-mermaid": "^3.0.0",
		"rehype-slug": "^6.0.0",
		"rehype-stringify": "^10.0.0",
		"remark-frontmatter": "^5.0.0",
		"remark-gfm": "^4.0.0",
		"remark-parse": "^11.0.0",
		"remark-rehype": "^11.1.0",
		"remark-stringify": "^11.0.0",
		"svelte": "^5.28.2",
		"svelte-persisted-store": "^0.12.0",
		"tailwindcss": "^4.1.1",
		"unified": "^11.0.4",
		"yaml": "^2.6.0",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@codecov/vite-plugin": "^1.9.0",
		"@playwright/test": "1.47.2",
		"@sveltejs/adapter-cloudflare": "^7.0.3",
		"@testing-library/svelte": "^5.2.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/qrcode": "^1.5.5",
		"@vitest/coverage-v8": "^3.0.8",
		"@vitest/ui": "^3.0.8",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^10.1.1",
		"eslint-plugin-jsdoc": "^50.6.3",
		"eslint-plugin-svelte": "^3.0.3",
		"happy-dom": "^17.3.0",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte-check": "^4.1.5",
		"tslib": "^2.8.1",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.28.0",
